<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_torahmate_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.pixplicity.fontview.FontTextView
                        android:id="@+id/tv_torahmate_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:maxLines="1"
                        android:text="Your TM Coordinator - Rabbi Josephson"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        app:pix_font="fonts/OpenSans-Regular.ttf" />

                </RelativeLayout>
            </LinearLayout>

            <com.pixplicity.fontview.FontTextView
                android:id="@+id/torahnamte_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:text=" 732-730-1000 X 182"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                app:pix_font="fonts/OpenSans-Regular.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_call"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_phone" />

                    <com.pixplicity.fontview.FontTextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=" 732-730-1000 X 182"
                        android:textColor="@android:color/black"
                        app:pix_font="fonts/OpenSans-Regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_email" />

                    <com.pixplicity.fontview.FontTextView
                        android:id="@+id/tv_email_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="info@oorah.org"
                        android:textColor="@android:color/black"
                        app:pix_font="fonts/OpenSans-Regular.ttf" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view_liner"
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignBottom="@+id/title"
                android:layout_alignParentStart="true"
                android:background="@color/colorListDivider" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>